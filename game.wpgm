import wollok.game.*
import hector.*
import cultivos.*

program farmville {
	//  CONFIG	
	game.title("FarmVille")
	game.height(10)
	game.width(10)
	game.ground("ground.png")

	//  VISUALES
 	game.addVisualCharacter(hector)
	keyboard.m().onPressDo{hector.plantarMaiz()}
	keyboard.t().onPressDo{hector.plantarTrigo()}
	keyboard.o().onPressDo{hector.plantarTomaco()}
 //	
 	
 	//  COMIENZA
	game.start()
}
